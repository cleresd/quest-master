{
  "name": "proavalon",
  "version": "1.0.0",
  "description": "ProAvalon",
  "scripts": {
    "build": "tsc && webpack --config webpack.prod.js && Xcopy .\\src\\views .\\out /E /H /C /I",
    "build:linux": "tsc && webpack --config webpack.prod.js && cp -R ./src/views ./out",
    "dev": "concurrently -k \"npm:dev:tsnd\" \"npm:dev:webpack\"",
    "dev:tsnd": "npx ts-node-dev --respawn --ignore-watch \".tsx$\" ./src/app.ts",
    "dev:webpack": "webpack serve --config webpack.dev.js",
    "start": "ts-node ./src/app.ts"
  },
  "author": "Victor Kuo",
  "license": "ISC",
  "dependencies": {
    "@types/ejs": "^3.0.6",
